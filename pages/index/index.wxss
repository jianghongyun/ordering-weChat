/**index.wxss**/
page {
  background: #f9f9f8;
  font-size: 30rpx;
  font-family: 'Microsoft YaHei';
  height: 100%;
}

.pageBox {
  background: #F4165F;
  padding-top: 20rpx;
  height: 100%;
  box-sizing: border-box;
}

.index {
  background: #f9f9f8;
  width: 100%;
  height: 100%;
  border-top-right-radius: 10rpx;
  border-top-left-radius: 10rpx;
  display: flex;
}

.left {
  width: 200rpx;
  height: 100%;
  background: #f3f3f3;
  border-top-left-radius: 20rpx;
  padding: 20rpx 0 20rpx 40rpx;
  box-sizing: border-box;
}

.menuClass {
  height: 100rpx;
  line-height: 100rpx;
  position: relative;
  width: 100%;
  color: #666;
}

.menuClass.active {
  color: #F4165F;
}

.menuClass.active::before {
  position: absolute;
  width: 6rpx;
  height: 40rpx;
  background: #F4165F;
  content: '';
  left: -40rpx;
  top: 30rpx;
}

.right {
  width: 550rpx;
  padding: 30rpx 20rpx 80rpx 20rpx;
  box-sizing: border-box;
  height: 100%;
  overflow-y: auto;
}

.menu {
  width: 100%;
  height: 200rpx;
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 2rpx 2rpx 2rpx #f3f3f3;
  color: #666;
  display: flex;
  position: relative;
}

.mark {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  left: -15rpx;
  top: 30rpx;
  border-radius: 50%;
  color: #fff;
  background: #F4165F;
  text-align: center;
  font-size: 20rpx;
  line-height: 30rpx;
}

.menuLeft, .menuLeft image {
  width: 200rpx;
  height: 200rpx;
}

.menuRight {
  width: 310rpx;
  padding-left: 15rpx;
  box-sizing: border-box;
}

.menuName {
  font-size: 34rpx;
  height: 70rpx;
  line-height: 70rpx;
  color: #333;
}

.menuDes {
  height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
}

.menuDes {
  font-size: 28rpx;
  padding-right: 15rpx;
  box-sizing: border-box;
  color: #999;
}

.menuBottom {
  height: 50rpx;
  display: flex;
  justify-content: space-between;
}

.menuPrice {
  color: #F4165F;
  font-weight: bold;
  line-height: 50rpx;
}

.addCar {
  background: #face54;
  width: 60rpx;
  height: 50rpx;
  color: #fff;
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  line-height: 50rpx;
  /* border-top-right-radius: 10rpx; */
  border-top-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  /* border-bottom-left-radius: 10rpx; */
}

.operateCar {
  display: flex;
  width: 150rpx;
  align-items: center;
  justify-content: space-between;
  color: #F4165F;
  padding-right: 10rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 34rpx;
}

.add, .reduce {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.operateCar image {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}


.shade {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  background: rgba(0,0,0,0.3);
}

.layer {
  width: 600rpx;
  height: 90%;
  position: absolute;
  left: 75rpx;
  top: 5%;
  background: #fff;
  border-radius: 10rpx;
}

.layer image {
  width: 100%;
  height: 35%;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.layrtTop {
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  height: 100rpx;
  align-items: center;
  font-size: 36rpx;
}

.layerName {
  
  color: #666;
}

.layerPrice {
  color: #F4165F;
}

.layerTitle {
  padding-left: 30rpx;
  color: #F4165F;
  height: 50rpx;
  line-height: 50rpx;
}

.layerDes {
  padding: 0 30rpx;
  box-sizing: border-box;
  line-height: 1.5;
  color: #333;
}

.close {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  font-size: 60rpx;
  color: #999;
  right: 0;
  top: 0;
  text-align: center;
  line-height: 60rpx;
}

.show {
  display: block;
}

.hide {
  display: none;
}

.settleBox {
  width: 700rpx;
  position: fixed;
  bottom: 10rpx;
  left: 25rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  z-index: 5;
}

.settleLeft {
  width: 560rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #444444;
  color: #eeeeee;
  height: 70rpx;
  font-size: 24rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-top-left-radius: 20rpx;
}

.shopBag {
  letter-spacing: 2rpx;
  height: 70rpx;
  width: 200rpx;
}

.shopBag, .settlePrice {
  display: flex;
  align-items: center;
}

.settleLeft image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.settlePrice text {
  color: #face54;
  font-size: 36rpx;
}

.settleRight {
  width: 140rpx;
  height: 70rpx;
  background: #face54;
  text-align: center;
  line-height: 70rpx;
  letter-spacing: 2rpx;
  border-bottom-right-radius: 20rpx;
}

.mark1 {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  left: 80rpx;
  top: -15rpx;
  border-radius: 50%;
  color: #fff;
  background: #F4165F;
  text-align: center;
  font-size: 20rpx;
  line-height: 30rpx;
}

.shoppingList {
  z-index: 4;
  width: 700rpx;
  position: fixed;
  bottom: 60rpx;
  padding-bottom: 40rpx;
  height: 600rpx;
  background: #fff;
  left: 25rpx;
  box-sizing: border-box;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.menuShade {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  background: rgba(0,0,0,0.2);
  z-index: 3;
}

.shoppingTitle {
  width: 700rpx;
  height: 70rpx;
  background: #dcdddc;
  display: flex;
  padding: 0 0 0 30rpx;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  color: #333;
}

.clear {
  color: #666;
  font-size: 28rpx;
  height: 70rpx;
  width: 100rpx;
  text-align: center;
  line-height: 70rpx;
}

.shoppingBox {
  height: 490rpx;
  width: 100%;
  padding: 0 20rpx 20rpx 20rpx;
  box-sizing: border-box;
  overflow-y: auto;
}

.shoppingItem {
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #333;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

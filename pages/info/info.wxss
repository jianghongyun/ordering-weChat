/* pages/info/info.wxss */
page {
  background: #f9f9f8;
  font-size: 30rpx;
  font-family: 'Microsoft YaHei';
  height: 100%;
}

.title {
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  background: #ffffff;
  font-size: 34rpx;
  font-weight: bold;
}

.infoBox {
  margin: 20rpx 0;
  background: #ffffff;
}

.info {
  height: 90rpx;
  border-bottom: 2rpx solid #eee;
  display: flex;
  color: #666;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.info:last-child {
  border: none;
}

.label {
  width: 200rpx;
  font-size: 34rpx;
  color: #000;
}

radio:last-child {
  margin-left: 60rpx;
}

.submit {
  width: 690rpx;
  margin: 60px auto 0 auto;
  height: 90rpx;
  line-height: 90rpx;
  background: #F4165F;
  color: #ffffff;
  text-align: center;
  font-size: 34rpx;
  font-weight: bold;
  border-radius: 90rpx;
}
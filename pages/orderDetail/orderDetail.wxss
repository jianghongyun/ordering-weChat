/* pages/orderDetail/orderDetail.wxss */
page {
  background: #f9f9f8;
  font-size: 30rpx;
  font-family: 'Microsoft YaHei';
}

.container {
  width: 100%;
  padding: 0 30rpx;
  background: #fff;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.title {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  font-size: 34rpx;
}

.title image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.content {
  width: 100%;
  border-bottom: 2rpx solid #ebebeb;
  border-top: 2rpx solid #ebebeb;
  padding: 20rpx 0;
}

.item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
  color: #333;
}

.name {
  width: 50%;
}

.number {
  width: 20%;
}

.price {
  width: 30%;
  text-align: right;
}

.total {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  height: 100rpx;
  width: 100%;
}

.total text {
  color: #f4165f;
  font-size: 32rpx;
}

.infoBox {
  width: 100%;
  background: #fff;
  padding: 20rpx;
  box-sizing: border-box;
}

.info {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  box-shadow: 2rpx 2rpx 2rpx #efefef;
}

.row {
  display: flex;
  min-height: 80rpx;
  border-bottom: 2rpx solid #efefef;
  align-items: center;
  color: #999;
}

.row:last-child {
  border-bottom: none;
}

.label {
  width: 150rpx;
  color: #333;
}

.con {
  width: 520rpx;
}